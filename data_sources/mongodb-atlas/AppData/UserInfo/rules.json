{
    "collection": "UserInfo",
    "database": "AppData",
    "roles": [
        {
            "name": "owner",
            "apply_when": {
                "userId": "%%user.id",
                "email": "%%user.data.email"
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        },
        {
            "name": "others",
            "apply_when": {},
            "read": true,
            "write": false,
            "search": true
        }
    ]
}
